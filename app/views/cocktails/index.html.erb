<h1>Our Cocktails</h1>
<br>
<div class="container">
  <div class="row">
      <% @cocktails.each do |cocktail| %>

      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('background.jpg');">
       <!--    <img class="card-img-top" src="..." alt="Card image cap"> -->
            <div class="card-category"><%= cocktail.name %></div>
              <div class="card-description">
                <% cocktail.doses.each do |dose| %>
                    <li><%= dose.description %>
                    <%= dose.ingredient.name %>
                  </li>
                <% end %>
              </div>
          <i class="fa fa-eye" data-toggle="modal" data-target="#myModal"></i>
        </div>
      </div>


      <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <%= render "show", cocktail: cocktail %>
            </div>
          </div>
        </div>
      </div>

      <% end %>
  </div>
</div>

