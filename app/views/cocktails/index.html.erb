<div class="title">
<h1>Our Cocktails</h1>
</div>
<br>


<div class="container">
  <div class="row">
      <% @cocktails.each do |cocktail| %>

      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,74,85,0.4), rgba(248,125,9,0.3)), url('<%= cl_image_path "#{cocktail.photo}", height: 100, width: 100, crop: :scale%>');">
       <!--    <img class="card-img-top" src="..." alt="Card image cap"> -->
            <div class="card-category" ><%= cocktail.name %></div>
              <div class="card-description" style="cursor:pointer">
                <% cocktail.doses.each do |dose| %>
                    <li><%= dose.description %>
                    <%= dose.ingredient.name %>
                  </li>
                <% end %>
              </div>
          <i class="fa fa-eye" style="cursor:pointer" data-toggle="modal" data-target="#cocktail-<%= cocktail.id %>-modal"></i>
        </div>
      </div>


      <div class="modal fade" id="cocktail-<%= cocktail.id %>-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
            <%= render 'shared/cocktail', cocktail: cocktail %>
            </div>
          </div>
        </div>
      </div>

      <% end %>
  </div>
</div>

