<h2>Cocktail</h2>
<h3> <%= @cocktail.name %> </h3>
<ul> <% @cocktail.doses.each do |dose| %>
  <li> <%= dose.description %> </li>
  <%= link_to "Destroy this dose", dose_path(dose), method: :delete %>
  <% end %>
</ul>
<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
