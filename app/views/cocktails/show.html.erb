<h2>Cocktail</h2>
<h3> <%= @cocktail.name %> </h3>
<ul> <% @cocktail.doses.each do |dose| %>
  <li> <%= dose.description %> of <%= dose.ingredient.name %>
  <%= link_to "Destroy this dose", dose_path(dose), method: :delete, class: "btn btn-danger" %></li>
  <% end %>
</ul>
<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
<br>
<%= link_to "Back to the list of cocktails", cocktails_path, class: "btn btn-success" %>
